<header id="header">
  <h1 id="title" style="display: none;">
    <a href="<%- url_for() %>"><%= config.title %></a>
  </h1>
  <p class="subtitle"><%= __(config.subtitle) %></p>
  <p class="description"><%= config.description %></p>
  <nav>
    <% var keys = Object.keys(theme.menu); %>
    <% for (var i = 0; i < keys.length; i++){ %>
      <% if (i !== 0){ %>
        <span class="nav-spacer"></span>
      <% } %>
      <a class="nav-link" href="<%- url_for(theme.menu[keys[i]]) %>"><%= __(keys[i].toLowerCase()) %></a>
    <% } %>
    <% if (theme.rss){ %>
      <span class="nav-spacer"></span>
      <a class="nav-link" href="<%- url_for(theme.rss) %>"><%= __('rss_feed') %></a>
    <% } %>
  </nav>
</header>
