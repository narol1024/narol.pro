{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy:all": "npm run deploy && npm run deploy:en",
    "build": "hexo clean && hexo generate",
    "deploy": "hexo clean && hexo deploy",
    "server": "hexo clean && hexo server",
    "build:en": "hexo clean && hexo generate --config _config.yml,_config.en.yml,_config.en.prod.yml",
    "deploy:en": "hexo clean && hexo deploy --config _config.yml,_config.en.yml,_config.en.prod.yml",
    "server:en": "hexo clean && hexo server --config _config.yml,_config.en.yml",
    "clean": "hexo clean",
    "f2elint-scan": "f2elint scan",
    "f2elint-fix": "f2elint fix"
  },
  "hexo": {
    "version": "6.0.0"
  },
  "dependencies": {
    "hexo": "6.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^2.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^5.0.0",
    "hexo-renderer-stylus": "^2.1.0",
    "hexo-server": "^3.0.0",
    "hexo-theme-landscape": "^0.0.3"
  },
  "devDependencies": {
    "f2elint": "^2.2.1",
    "hexo-deployer-git": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "f2elint commit-file-scan",
      "commit-msg": "f2elint commit-msg-scan"
    }
  }
}
